<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.entity.User">
        <id column="user_id" property="userId" />
        <result column="user_name" property="userName" />
        <result column="password" property="password" />
        <result column="register_time" property="registerTime" />
        <result column="image_path" property="imagePath" />
    </resultMap>

    <!-- 自定义查询结果 -->
    <resultMap id="ResourceResultMap" type="com.example.pojo.ResourceVO">
        <id column="id" property="roleId" />
        <result column="name" property="roleName" />
        <collection property="resourceList" ofType="resource">
            <id column="resource_id" property="id" />
            <result column="resource_name" property="name" />
            <result column="path" property="path" />
        </collection>
    </resultMap>


    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        user_id, user_name, password, register_time, image_path
    </sql>

    <select id="getAllUser" resultType="com.example.pojo.UserVO">
        select user.user_id as user_id,user_name,register_time,image_path,role.name as role_name, role.id as role_id from user,user_role,role where
        user.user_id = user_role.user_id and role.id = user_role.role_id;
    </select>

    <select id="getAllRoleName" resultType="com.example.pojo.RoleVO">
        select id as role_id, name as role_name from role;
    </select>

    <select id="getRoleMapResource" resultMap="ResourceResultMap">
        SELECT
            role.*,
            resource.id as resource_id,
            resource.name as resource_name,
            resource.path
        FROM
            role
                JOIN role_resource ON role.id = role_resource.role_id
                JOIN resource ON resource.id = role_resource.resource_id;
    </select>

</mapper>
