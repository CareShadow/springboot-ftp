<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.FileFolderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.entity.FileFolder">
        <id column="file_folder_id" property="fileFolderId" />
        <result column="file_folder_name" property="fileFolderName" />
        <result column="parent_folder_id" property="parentFolderId" />
        <result column="time" property="time" />
        <result column="minio_path" property="minioPath" />
        <result column="user_id" property="userId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        file_folder_id, file_folder_name, parent_folder_id, time, minio_path, user_id
    </sql>

    <select id="getFolderPath" resultType="java.lang.String">
        select FolderPath(#{folderID})
    </select>

    <select id="getFolderMinIOPath" resultType="java.lang.String">
        select MinIOFolder(#{folderID})
    </select>

    <select id="getFolderIdPath" resultType="java.lang.String">
        select FolderID(#{foldeID})
    </select>
</mapper>
